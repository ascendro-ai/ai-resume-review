generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id              String          @id @default(cuid())
  name            String?
  email           String?         @unique
  emailVerified   DateTime?
  image           String?
  scorecardCount  Int             @default(0)
  reworkCredits   Int             @default(0)
  createdAt       DateTime        @default(now())
  accounts        Account[]
  sessions        Session[]
  resumes         Resume[]
}

model Resume {
  id             String          @id @default(cuid())
  userId         String
  originalPdfUrl String?
  extractedText  String          @db.Text
  fileName       String
  createdAt      DateTime        @default(now())
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  scorecards     Scorecard[]
  reworkSessions ReworkSession[]
}

model Scorecard {
  id             String   @id @default(cuid())
  resumeId       String
  overallScore   Int
  strengths      Json
  improvements   Json
  sectionScores  Json
  formatFeedback Json
  createdAt      DateTime @default(now())
  resume         Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
}

model ReworkSession {
  id                String         @id @default(cuid())
  resumeId          String
  status            String         @default("in_progress") // in_progress | completed
  currentBulletIndex Int           @default(0)
  totalBullets      Int            @default(0)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  resume            Resume         @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  bullets           ReworkBullet[]
}

model ReworkBullet {
  id               String        @id @default(cuid())
  reworkSessionId  String
  sectionTitle     String
  originalText     String        @db.Text
  userExplanation  String?       @db.Text
  revisedText      String?       @db.Text
  status           String        @default("pending") // pending | in_conversation | accepted
  order            Int
  reworkSession    ReworkSession @relation(fields: [reworkSessionId], references: [id], onDelete: Cascade)
}
